{
  "name": "incredibledev-next",
  "version": "0.0.1-alpha",
  "scripts": {
    "build:production": "tsc && NODE_ENV=production vite build",
    "build:staging": "tsc && NODE_ENV=production vite build --mode staging",
    "build": "tsc && vite build",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config",
    "deploy:production": "firebase deploy --only hosting:production",
    "deploy:staging": "firebase deploy --only hosting:staging",
    "dev": "vite",
    "serve": "vite preview",
    "prepare": "husky install",
    "lint": "npx eslint --format=pretty ./src --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "@material-ui/core": "^4.12.2",
    "@material-ui/icons": "^4.11.2",
    "@sentry/react": "^6.10.0",
    "@sentry/tracing": "^6.10.0",
    "apollo-cache-persist": "^0.1.1",
    "firebase": "9.0.0-beta.7",
    "graphql": "^15.5.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.2.0",
    "recoil": "^0.3.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.7",
    "@graphql-codegen/fragment-matcher": "2.0.1",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/jsdoc": "^1.17.13",
    "@graphql-codegen/typescript": "1.23.0",
    "@graphql-codegen/typescript-document-nodes": "1.17.15",
    "@graphql-codegen/typescript-operations": "1.18.4",
    "@graphql-codegen/typescript-react-apollo": "2.3.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "autoprefixer": "9",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",

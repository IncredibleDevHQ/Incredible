    "husky": "^7.0.0",
    "postcss": "7",
    "prettier": "^2.3.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vite-plugin-html-env": "^1.0.2-0",
    "vite-plugin-svgr": "^0.3.0"
